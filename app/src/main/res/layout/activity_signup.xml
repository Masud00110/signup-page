<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/loginbkg"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_height="match_parent"
    tools:context=".signup">
    <androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="30dp"
    app:cardCornerRadius="30dp"
    android:backgroundTint="@color/white"
    app:cardElevation="20dp"
    android:background="@drawable/custom_edittext">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/custom_edittext"
    android:padding="15dp">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:textSize="15sp"
    android:layout_marginTop="10dp"
    android:textColor="@color/black"
    android:textStyle="bold"
    android:text="Registration in DIAMOND WORLD" />

<com.google.android.material.textfield.TextInputLayout
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:textColorHint="@color/black"
    app:boxStrokeColor="#009688"
    android:layout_marginTop="10dp"
    app:hintTextColor="@color/black"
    app:startIconDrawable="@drawable/baseline_person_24"
    android:layout_height="wrap_content">

<com.google.android.material.textfield.TextInputEditText
    android:id="@+id/idfirstname"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:inputType="text"
    android:hint="Enter your Name"
    android:background="@drawable/custom_edittext"
    android:layout_height="50dp">
</com.google.android.material.textfield.TextInputEditText>

</com.google.android.material.textfield.TextInputLayout>

<com.google.android.material.textfield.TextInputLayout
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:textColorHint="@color/black"
    app:boxStrokeColor="#009688"
    app:hintTextColor="@color/black"
    android:layout_marginTop="5dp"
    app:startIconDrawable="@drawable/baseline_person_outline_24"
    android:layout_height="wrap_content">

<com.google.android.material.textfield.TextInputEditText
    android:id="@+id/idlastname"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:inputType="text"
    android:hint="Enter your user ID"
    android:background="@drawable/custom_edittext"
    android:layout_height="50dp">
</com.google.android.material.textfield.TextInputEditText>

</com.google.android.material.textfield.TextInputLayout>

<com.google.android.material.textfield.TextInputLayout
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:textColorHint="@color/black"
    app:boxStrokeColor="#009688"
    app:hintTextColor="@color/black"
    android:layout_marginTop="5dp"
    app:startIconDrawable="@drawable/baseline_email_24"
    android:layout_height="wrap_content">

<com.google.android.material.textfield.TextInputEditText
    android:id="@+id/idemail"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:inputType="text"
    android:background="@drawable/custom_edittext"
    android:hint="Enter your Email"
    android:layout_height="50dp">
</com.google.android.material.textfield.TextInputEditText>

</com.google.android.material.textfield.TextInputLayout>


<com.google.android.material.textfield.TextInputLayout
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:textColorHint="@color/black"
    app:boxStrokeColor="#009688"
    app:hintTextColor="@color/black"
    android:layout_marginTop="5dp"
    app:startIconDrawable="@drawable/baseline_phone_iphone_24"
    android:layout_height="wrap_content">

<com.google.android.material.textfield.TextInputEditText
    android:id="@+id/idnumber"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:inputType="number"
    android:hint="Enter your Number"
    android:background="@drawable/custom_edittext"
    android:layout_height="50dp">
</com.google.android.material.textfield.TextInputEditText>

</com.google.android.material.textfield.TextInputLayout>

<com.google.android.material.textfield.TextInputLayout
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:textColorHint="@color/black"
    app:boxStrokeColor="#009688"
    android:layout_marginTop="5dp"
    app:hintTextColor="@color/black"
    app:startIconDrawable="@drawable/baseline_lock_24"
    app:endIconMode="password_toggle"
    android:layout_height="wrap_content">

<com.google.android.material.textfield.TextInputEditText
    android:background="@drawable/custom_edittext"
    android:id="@+id/idpassword"
    android:layout_width="match_parent"
    android:inputType="text"
    android:layout_gravity="center"
    android:hint="Enter your Password"
    android:layout_height="50dp">
</com.google.android.material.textfield.TextInputEditText>

</com.google.android.material.textfield.TextInputLayout>

<CheckBox
    android:id="@+id/checkBox"
    android:layout_width="wrap_content"
    android:textStyle="bold"
    android:layout_gravity="center"
    android:textColor="@color/black"
    android:layout_height="wrap_content"
    android:text="I agree trams and conditions" />

<Button
    android:id="@+id/btnsignup"
    android:layout_width="match_parent"
    android:textSize="18dp"
    android:textStyle="bold"
    android:textColor="@color/white"
    android:backgroundTint="@color/purple"
    android:layout_gravity="center"
    android:layout_height="50dp"
    android:text="Registration" />

</LinearLayout>

</androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/login1"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:text="Already have an Account ? LOGIN." />

</LinearLayout>